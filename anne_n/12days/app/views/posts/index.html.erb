<div class="post-table">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>Price</th>
				<th>Location</th>
				<th>User</th>
				<th>Date Posted</th>
				<th>Photo (if available)</th>
			</tr>
		</thead>
		<tbody class="table-list">   
			<% @posts.each do |post|%>
				<tr>
					<td class="col-md-3"><%= link_to post.title, user_post_path(post.user, post) %></td>
					<td class="col-md-2"><%= number_to_currency(post.price) %></td>
					<td class="col-md-2"><%= post.location %></td>
					<td class="col-md-1"><%= link_to post.user.username, user_path(post.user) %></td>
					<td class="col-md-2"><%= post.created_at.strftime("%m/%d/%Y") %></td>
					<% if post.photo.file? %>
						<td class="col-md-2"><%= image_tag post.photo.url(:thumb), class:"index-image" %>
					<% else %>
						<td class="col-md-2"> </td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= will_paginate @posts %>
</div>
